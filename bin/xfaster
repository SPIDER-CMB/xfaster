#!/usr/bin/env python

import os
import xfaster as xf

# parse arguments
args = xf.xfaster_parse()
mode = args.pop("mode")

if mode == "submit":
    # submit a job
    script_path = os.path.abspath(__file__)
    xf.xfaster_submit(script_path=script_path, **args)

elif mode == "run":
    # run the analysis
    xf.xfaster_run(**args)
